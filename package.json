{
  "name": "stashl",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/api dev & bun run --cwd apps/web dev",
    "dev:api": "bun run --cwd apps/api dev",
    "dev:web": "bun run --cwd apps/web dev",
    "dev:mobile": "bun run --cwd apps/mobile start",
    "dev:tasks": "bun run --cwd apps/tasks dev",
    "mobile:ios": "bun run --cwd apps/mobile ios",
    "mobile:android": "bun run --cwd apps/mobile android",
    "type-check": "bun run --cwd apps/api type-check && bun run --cwd apps/web type-check && bun run --cwd apps/mobile type-check && bun run --cwd apps/tasks type-check && bun run --cwd packages/domain type-check",
    "lint": "bun run --cwd apps/api lint && bun run --cwd apps/web lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "bun x -y rimraf -g **/bun.lock* **/node_modules",
    "db:generate": "bun run --cwd packages/domain db:generate",
    "db:migrate": "bun run --cwd packages/domain db:migrate",
    "db:push": "bun run --cwd packages/domain db:push",
    "db:studio": "bun run --cwd packages/domain db:studio",
    "deploy:api": "fly deploy --config ./deploy/api/fly.toml --dockerfile ./deploy/api/Dockerfile",
    "deploy:web": "fly deploy --config ./deploy/web/fly.toml --dockerfile ./deploy/web/Dockerfile"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "rollup": "npm:@rollup/wasm-node"
  },
  "overrides": {
    "rollup": "npm:@rollup/wasm-node"
  }
}
